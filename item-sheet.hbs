<form class="barbaric2e sheet item {{item.type}}">
  <header class="sheet-header">
    <img class="item-img" src="{{item.img}}" data-edit="img"/>
    <div class="header-fields">
      <h1><input type="text" name="name" value="{{item.name}}" placeholder="Item Name"/></h1>
      <p class="item-type">{{item.type}}</p>
    </div>
  </header>

  <section class="sheet-body">
    {{!-- Archetype --}}
    {{#if (eq item.type "archetype")}}
    <div class="form-group description-group">
      <label>Description</label>
      <textarea name="system.description" placeholder="A brief description of your archetype...">{{system.description}}</textarea>
    </div>
    {{/if}}

    {{!-- Weapon --}}
    {{#if (eq item.type "weapon")}}
    <div class="form-group">
      <label>Damage</label>
      <input type="text" name="system.damage" value="{{system.damage}}" placeholder="e.g., 1d6+2"/>
    </div>
    <div class="form-group">
      <label>Attack Bonus</label>
      <input type="number" name="system.attackBonus" value="{{system.attackBonus}}" placeholder="0"/>
    </div>
    <div class="form-group">
      <label>Type</label>
      <select name="system.type">
        <option value="Crushing" {{#if (eq system.type "Crushing")}}selected{{/if}}>Crushing</option>
        <option value="Piercing" {{#if (eq system.type "Piercing")}}selected{{/if}}>Piercing</option>
        <option value="Slashing" {{#if (eq system.type "Slashing")}}selected{{/if}}>Slashing</option>
      </select>
    </div>
    <div class="form-group">
      <label>Hands</label>
      <select name="system.hands">
        <option value="1H" {{#if (eq system.hands "1H")}}selected{{/if}}>1H</option>
        <option value="2H" {{#if (eq system.hands "2H")}}selected{{/if}}>2H</option>
      </select>
    </div>
    <div class="form-group">
      <label>Range (eff/max)</label>
      <input type="text" name="system.range" value="{{system.range}}" placeholder="e.g. 5/10"/>
    </div>
    <div class="form-group">
      <label>Cost</label>
      <input type="text" name="system.cost" value="{{system.cost}}" placeholder="e.g., 10 gold"/>
    </div>
    <div class="form-group description-group">
      <label>Description</label>
      <textarea name="system.description">{{system.description}}</textarea>
    </div>
    {{/if}}

    {{!-- Armor --}}
    {{#if (eq item.type "armor")}}
    <div class="form-group">
      <label>Protection</label>
      <input type="number" name="system.protection" value="{{system.protection}}"/>
    </div>
    <div class="form-group">
      <label>Cost</label>
      <input type="text" name="system.cost" value="{{system.cost}}" placeholder="e.g., 20 gold"/>
    </div>
    <div class="form-group description-group">
      <label>Description</label>
      <textarea name="system.description">{{system.description}}</textarea>
    </div>
    {{/if}}

    {{!-- Equipment --}}
    {{#if (eq item.type "equipment")}}
    <div class="form-group">
      <label>Quantity</label>
      <input type="number" name="system.quantity" value="{{system.quantity}}" min="0"/>
    </div>
    <div class="form-group">
      <label>Cost</label>
      <input type="text" name="system.cost" value="{{system.cost}}" placeholder="e.g., 5 silver"/>
    </div>
    <div class="form-group description-group">
      <label>Description</label>
      <textarea name="system.description">{{system.description}}</textarea>
    </div>
    {{/if}}

    {{!-- Combat Move --}}
    {{#if (eq item.type "combatMove")}}
    <div class="form-group">
      <label>Level</label>
      <select name="system.level" class="level-select">
        <option value="2" {{#if (eq system.level "2")}}selected{{/if}}>2</option>
        <option value="3" {{#if (eq system.level "3")}}selected{{/if}}>3</option>
        <option value="4" {{#if (eq system.level "4")}}selected{{/if}}>4</option>
        <option value="5" {{#if (eq system.level "5")}}selected{{/if}}>5</option>
      </select>
    </div>
    <div class="form-group description-group">
      <label>Description</label>
      <textarea name="system.description">{{system.description}}</textarea>
    </div>
    {{/if}}

    {{!-- Spell --}}
    {{#if (eq item.type "spell")}}
    <div class="form-group">
      <label>Range</label>
      <input type="text" name="system.range" value="{{system.range}}" placeholder="e.g., Touch, 60ft"/>
    </div>
    <div class="form-group description-group">
      <label>Description</label>
      <textarea name="system.description">{{system.description}}</textarea>
    </div>
    {{/if}}

    {{!-- NPC Ability --}}
    {{#if (eq item.type "npcAbility")}}
    <div class="form-group description-group">
      <label>Description</label>
      <textarea name="system.description" placeholder="Describe this ability...">{{system.description}}</textarea>
    </div>
    {{/if}}
  </section>
</form>
